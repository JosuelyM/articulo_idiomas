@article{10.3389/fphy.2018.00045,
	author = {Morales, Jos{\'e} A. and Colman, Ewan and S{\'a}nchez, Sergio and S{\'a}nchez-Puig, Fernanda and Pineda, Carlos and I{\~n}iguez, Gerardo and Cocho, Germinal and Flores, Jorge and Gershenson, Carlos},
